{
    "name": "v-dem/queasy-config",
    "description": "Configuration classes (currently supports PHP, INI and JSON configs), part of Queasy PHP Framework",
    "homepage": "https://github.com/v-dem/queasy-config/",
    "keywords": ["php", "config", "configuration", "ini", "json"],
    "license": "LGPL-3.0-only",
    "minimum-stability": "dev",
    "version": "1.0.1",
    "authors": [
        {
            "name": "Vitaly Demyanenko",
            "email": "vitaly_demyanenko@yahoo.com"
        }
    ],
    "config": {
        "preferred-install": "dist"
    },
    "require": {
        "php": ">=5.3.0|>=7.0.0"
    },
    "require-dev": {
        "php": ">=7.1.0",
        "phpunit/phpunit": "~7",
        "ext-xdebug": "^2.6.0"
    },
    "autoload":{
        "psr-4":{
            "queasy\\config\\": "src/"
        }
    },
    "autoload-dev":{
        "psr-4":{
            "queasy\\config\\tests\\": "tests/src/"
        }
    },
    "scripts": {
        "test": "phpunit --coverage-clover clover.xml"
    }
}

